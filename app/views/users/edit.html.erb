<h2>Edit Profile</h2>

<%= form_for(@user) do |f| %>
<div class="form-inputs">
	<%= f.label "Profile Picture" %><%= f.file_field :avatar, as: :file %>
    Username: <%= f.text_field :username, required: true, autofocus: true %>
  
    First Name: <%= f.text_field :first_name, required: true %>
    Last Name: <%= f.text_field :last_name, required: true%>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>