<main class = "container">

<h4>Books Read per Shelf</h4>
<p>Select the shelves that will appear in the chart:</p>

<%= form_with(model:@user, url:user_update_profile_path(@user), method: "patch")  do |f| %>
			<%= f.fields_for :shelves do |shelf_form| %>
			<%= shelf_form.check_box :show %>
			<%= @user.shelves[shelf_form.index].name %>
			<br>
			<% end %>

			  <%= f.collection_check_boxes :shelves, Shelf.all, :id, :name do |b| %>
			  <% end %>

  <%= f.submit "Update" %>
<% end %>


<p>You can group these shelves!</p>
<% @user.shelves.each do |shelf| %>
<span class="badge badge-pill badge-light"><%= shelf.name %></span>
<% end%>

<br><button class="btn btn-primary" type="submit">Submit</button>
<br>
<%= link_to "Back", :back %>

</main>